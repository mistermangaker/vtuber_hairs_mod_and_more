    <defName>MMM_Apparel_CloudysHat</defName>
    <label>cloudys hat</label>
    <description>big hat</description>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/Cloudy/Cloudy_hat/CloudyHat</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>0.9</drawSize>
    </graphicData>
    <uiIconScale>1.15</uiIconScale>
    <costList>
        <Cloth>100</Cloth>
    </costList>
    <statBases>
      <WorkToMake>1400</WorkToMake>
      <MaxHitPoints>80</MaxHitPoints>
      <Mass>1.00</Mass>
      <StuffEffectMultiplierInsulation_Cold>0.05</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.1</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>2</EquipDelay>
    </statBases>
    <apparel>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/Cloudy/Cloudy_hat/CloudyHat</wornGraphicPath>
     </apparel>
  </ThingDef>

