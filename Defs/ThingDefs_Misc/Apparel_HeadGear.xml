<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef Name="MMM_Apparel_HeadGearBase" Abstract="True" ParentName="MMM_Apparel_CustomBase">
    <recipeMaker>
      <researchPrerequisite>ComplexClothing</researchPrerequisite>
    </recipeMaker>
    <thingCategories>
      <li>Headgear</li>
    </thingCategories>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToMake>1600</WorkToMake>
      <Mass>0.25</Mass>
      <EquipDelay>1.5</EquipDelay>
    </statBases>
    <apparel>
      <parentTagDef>ApparelHead</parentTagDef>
        <countsAsClothingForNudity>false</countsAsClothingForNudity>
        <bodyPartGroups>
        <li>UpperHead</li>
      </bodyPartGroups>
        <layers> 
            <li>Overhead</li>
        </layers>
        <canBeDesiredForIdeo>false</canBeDesiredForIdeo>
    </apparel>
    <tradeTags>
    <li>BasicClothing</li>
    </tradeTags>
  </ThingDef>

  <ThingDef Name="MMM_Apparel_HeadGear_Hat_Base" Abstract="True" ParentName="MMM_Apparel_HeadGearBase">
  	<apparel>
      <renderSkipFlags>
        <li>None</li>
      </renderSkipFlags>
      <forceEyesVisibleForRotations>
        <li>1</li>
        <li>2</li>
        <li>3</li>
      </forceEyesVisibleForRotations>
      <drawData>
        <dataSouth>
          <layer>-3</layer>
        </dataSouth>
      </drawData>
    </apparel>
 </ThingDef>

